-- ULTIMATE UNIVERSAL HUB v4.0 - Super Light & 100% WORKING
-- Only 8 essential features + Insert GUARANTEED to open/close
-- Clean, wide, no overlap, instant open

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- Create GUI
local screen = Instance.new("ScreenGui")
screen.Name = "UltimateHubV4"
screen.ResetOnSpawn = false
screen.Parent = game.CoreGui

local main = Instance.new("Frame")
main.Size = UDim2.new(0, 500, 0, 550)
main.Position = UDim2.new(0.5, -250, 0.5, -275)
main.BackgroundColor3 = Color3.fromRGB(15, 15, 35)
main.BorderSizePixel = 0
main.Visible = false
main.Active = true
main.Draggable = true
main.Parent = screen

Instance.new("UICorner", main).CornerRadius = UDim.new(0, 25)
local stroke = Instance.new("UIStroke", main)
stroke.Thickness = 4
stroke.Color = Color3.fromRGB(0, 255, 255)
stroke.Transparency = 0.2

-- Title
local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1, 0, 0, 70)
title.BackgroundTransparency = 1
title.Text = "ULTIMATE HUB v4.0"
title.TextColor3 = Color3.fromRGB(0, 255, 255)
title.Font = Enum.Font.GothamBlack
title.TextSize = 36
title.TextStrokeTransparency = 0.7

-- Scrolling frame
local scroll = Instance.new("ScrollingFrame", main)
scroll.Size = UDim2.new(1, -40, 1, -100)
scroll.Position = UDim2.new(0, 20, 0, 80)
scroll.BackgroundTransparency = 1
scroll.ScrollBarThickness = 8
scroll.ScrollBarImageColor3 = Color3.fromRGB(0, 255, 255)
scroll.CanvasSize = UDim2.new(0, 0, 0, 800)

local layout = Instance.new("UIListLayout", scroll)
layout.Padding = UDim.new(0, 25)
layout.SortOrder = Enum.SortOrder.LayoutOrder

-- Toggle Template
local function createToggle(name, callback)
    local frame = Instance.new("Frame", scroll)
    frame.Size = UDim2.new(1, 0, 0, 70)
    frame.BackgroundColor3 = Color3.fromRGB(30, 30, 70)
    Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 20)

    local label = Instance.new("TextLabel", frame)
    label.Size = UDim2.new(0.6, 0, 1, 0)
    label.Position = UDim2.new(0, 20, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = name
    label.TextColor3 = Color3.fromRGB(200, 255, 255)
    label.Font = Enum.Font.GothamBold
    label.TextSize = 24
    label.TextXAlignment = Enum.TextXAlignment.Left

    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(0, 110, 0, 55)
    btn.Position = UDim2.new(1, -130, 0.5, -27.5)
    btn.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
    btn.Text = "OFF"
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = Enum.Font.GothamBold
    btn.TextScaled = true
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 20)

    local on = false
    btn.MouseButton1Click:Connect(function()
        on = not on
        btn.Text = on and "ON" or "OFF"
        btn.BackgroundColor3 = on and Color3.fromRGB(0, 255, 100) or Color3.fromRGB(255, 60, 60)
        callback(on)
    end)
end

-- FEATURES (only the best & most stable)
createToggle("Fly (WASD + Space/Shift)", function(on)
    getgenv().fly = on
    if on and player.Character then
        local bv = Instance.new("BodyVelocity", player.Character.HumanoidRootPart)
        bv.MaxForce = Vector3.new(1e5, 1e5, 1e5)
        bv.Velocity = Vector3.new(0,0,0)
        local bg = Instance.new("BodyGyro", player.Character.HumanoidRootPart)
        bg.MaxTorque = Vector3.new(1e5, 1e5, 1e5)
        bg.P = 10000
        spawn(function()
            while getgenv().fly and player.Character do
                local cam = workspace.CurrentCamera
                local hrp = player.Character.HumanoidRootPart
                local move = Vector3.new()
                if UserInputService:IsKeyDown(Enum.KeyCode.W) then move += cam.CFrame.LookVector end
                if UserInputService:IsKeyDown(Enum.KeyCode.S) then move -= cam.CFrame.LookVector end
                if UserInputService:IsKeyDown(Enum.KeyCode.A) then move -= cam.CFrame.RightVector end
                if UserInputService:IsKeyDown(Enum.KeyCode.D) then move += cam.CFrame.RightVector end
                if UserInputService:IsKeyDown(Enum.KeyCode.Space) then move += Vector3.new(0,1,0) end
                if UserInputService:IsKeyDown(Enum.KeyCode.LeftShift) then move -= Vector3.new(0,1,0) end
                bv.Velocity = move * 80
                bg.CFrame = cam.CFrame
                task.wait()
            end
            bv:Destroy()
            bg:Destroy()
        end)
    end
end)

createToggle("Speed Hack (100)", function(on)
    if player.Character and player.Character:FindFirstChild("Humanoid") then
        player.Character.Humanoid.WalkSpeed = on and 100 or 16
    end
end)

createToggle("Noclip", function(on)
    getgenv().noclip = on
end)

createToggle("Infinite Jump", function(on)
    getgenv().infjump = on
end)

createToggle("Fullbright", function(on)
    if on then
        game.Lighting.Brightness = 3
        game.Lighting.FogEnd = 99999
        game.Lighting.GlobalShadows = false
    else
        game.Lighting.Brightness = 1
        game.Lighting.FogEnd = 1000
        game.Lighting.GlobalShadows = true
    end
end)

createToggle("Player ESP", function(on)
    if on then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/ic3w0lf22/Unnamed-ESP/master/UnnamedESP.lua"))()
    end
end)

-- Noclip & Infinite Jump loop
RunService.Stepped:Connect(function()
    if getgenv().noclip and player.Character then
        for _, v in pairs(player.Character:GetDescendants()) do
            if v:IsA("BasePart") then
                v.CanCollide = false
            end
        end
    end
    if getgenv().infjump and UserInputService:IsKeyDown(Enum.KeyCode.Space) and player.Character then
        player.Character.Humanoid:ChangeState("Jumping")
    end
end)

-- INSERT TOGGLE - 100% WORKING
local open = false
UserInputService.InputBegan:Connect(function(key)
    if key.KeyCode == Enum.KeyCode.Insert then
        open = not open
        main.Visible = open
        
        if open then
            TweenService:Create(main, TweenInfo.new(0.5, Enum.EasingStyle.Back), {
                Size = UDim2.new(0, 500, 0, 550),
                Position = UDim2.new(0.5, -250, 0.5, -275)
            }):Play()
        else
            TweenService:Create(main, TweenInfo.new(0.4), {
                Size = UDim2.new(0, 0, 0, 0),
                Position = UDim2.new(0.5, 0, 0.5, 0)
            }):Play()
        end
    end
end)

print("ULTIMATE HUB v4.0 Loaded - Press INSERT to open!")
